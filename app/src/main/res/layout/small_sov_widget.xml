<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/appwidget_ll"
        android:background="@drawable/richblue_to_trans_stroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="Device name"/>
        <ImageView
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_sheet_of_paper_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/small_sov_widget_on"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="ON"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@drawable/btn_style_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/small_sov_widget_off"
                android:layout_marginLeft="2dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="OFF"
                android:background="@drawable/btn_style_white_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>